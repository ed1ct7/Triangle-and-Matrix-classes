        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Triangle_and_Matrix_classes.Views"
        xmlns:vm="clr-namespace:Triangle_and_Matrix_classes.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
     
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <ListBox ItemsSource="{Binding Objects}"
