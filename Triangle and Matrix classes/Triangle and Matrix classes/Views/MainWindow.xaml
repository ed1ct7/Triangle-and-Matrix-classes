<Window x:Class="Triangle_and_Matrix_classes.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Triangle_and_Matrix_classes.Views"
        xmlns:vm="clr-namespace:Triangle_and_Matrix_classes.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ListBox Grid.Column="0" 
                 ItemsSource="{Binding Objects}"
                 SelectedItem="{Binding SelectedObject}"/>

        <ContentControl Grid.Column="1" 
                        Content="{Binding CurrentViewModel}">
            <ContentControl.Resources>

                <DataTemplate DataType="{x:Type vm:TriangleViewModel}">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Сторона A:" Margin="0,5"/>
                        <TextBox Grid.Row="1" Text="{Binding Sides.A}" Margin="0,5"/>

                        <TextBlock Grid.Row="2" Text="Сторона B:" Margin="0,5"/>
                        <TextBox Grid.Row="3" Text="{Binding Sides.B}" Margin="0,5"/>

                        <TextBlock Grid.Row="4" Text="Сторона C:" Margin="0,5"/>
                        <TextBox Grid.Row="5" Text="{Binding Sides.C}" Margin="0,5"/>

                        <Button Grid.Row="6" 
                                Content="Вычислить" 
                                Command="{Binding CalculateCommand}"
                                Margin="0,10" Height="30"/>

                        <TextBlock Grid.Row="7" Text="{Binding Result}" Margin="0,10"/>
                    </Grid>
                </DataTemplate>

                <DataTemplate DataType="{x:Type vm:MatrixViewModel}">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Размер:" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding Size, Mode=TwoWay}" Width="40" Margin="5,0"/>

                        </StackPanel>

                        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Margin="0,10" Padding="5">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                               <!--Первая матрица-->
                                <ItemsControl Grid.Row="0" ItemsSource="{Binding MatrixF.MatrixElements, Mode=TwoWay}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="{Binding Size}" Rows="{Binding Size}"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBox Text="{Binding Value}" 
                                                Width="50" 
                                                Height="25" 
                                                Margin="2"
                                                HorizontalContentAlignment="Center"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <ListBox Grid.Row="1" ItemsSource="{Binding Operations}" SelectedItem="{Binding SelectedItem}"></ListBox>
                                
                                <!--Вторая матрица-->
                                <ItemsControl Grid.Row="2" ItemsSource="{Binding MatrixS.MatrixElements, Mode=TwoWay}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="{Binding Size}" Rows="{Binding Size}"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBox Text="{Binding Value}" 
                                                Width="50" 
                                                Height="25" 
                                                Margin="2"
                                                HorizontalContentAlignment="Center"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                
                                <Button Grid.Row="3" 
                                     Content="Вычислить" 
                                     Command="{Binding CalculateCommand}"
                                     Margin="0,10" Height="30"/>

                                <!--Результирующая матрица-->
                                <ItemsControl Grid.Row="4" 
                                              ItemsSource="{Binding MatrixR.MatrixElements, Mode=TwoWay}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="{Binding Size}" Rows="{Binding Size}"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBox Text="{Binding Value}" 
                                            Width="50" 
                                            Height="25" 
                                            Margin="2"
                                            HorizontalContentAlignment="Center"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                    <ItemsControl.Style>
                                        <Style TargetType="ItemsControl">
                                            <Setter Property="Visibility" Value="Visible"></Setter>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding isCompare}"
                                                             Value="True"
                                                             >
                                                    <Setter Property="Visibility" 
                                                            Value="Collapsed"></Setter>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ItemsControl.Style>
                                </ItemsControl>
                                <TextBlock ></TextBlock>
                            </Grid>
                        </Border>

                        <TextBlock Grid.Row="3" Text="{Binding Result}" Margin="0,10"/>
                    </Grid>
                </DataTemplate>

            </ContentControl.Resources>
        </ContentControl>
    </Grid>
</Window>